# Streamlit Secrets Configuration Example
# Copy this file structure to your Streamlit Community Cloud secrets

# LLM Provider Configuration
LLM_PROVIDER = "azure"

# Azure OpenAI (if using Azure)
AZURE_OPENAI_API_KEY = "your-azure-api-key-here"
AZURE_OPENAI_ENDPOINT = "https://your-resource.openai.azure.com/"
AZURE_OPENAI_MODEL_NAME = "gpt-4o-mini"
AZURE_OPENAI_DEPLOYMENT_NAME = "gpt-4o-mini"

# OpenAI (if using OpenAI instead)
OPENAI_API_KEY = "your-openai-api-key-here"

# AWS S3 Storage
AWS_ACCESS_KEY_ID = "your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY = "your-aws-secret-access-key"
AWS_S3_BUCKET = "ti-tool-s3-storage"
AWS_REGION = "us-east-1"
USE_S3_STORAGE = "true"

# SearXNG (if using)
SEARXNG_URL = "http://your-searxng-url:8888"

# LinkedIn (if using)
LINKEDIN_USERNAME = "your-linkedin-email@example.com"
LINKEDIN_PASSWORD = "your-linkedin-password"
